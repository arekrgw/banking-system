<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100" maxWidth="Infinity" halignment="RIGHT"></ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS"></ColumnConstraints>
    </columnConstraints>

    <Label text="Załóż konto" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1" GridPane.halignment="CENTER">
        <font>
            <Font name="Arial" size="24"></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Label text="Imie" GridPane.halignment="LEFT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1"></Label>
    <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2" />

    <Label text="Nazwisko" GridPane.halignment="LEFT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"></Label>
    <TextField fx:id="surnameField" prefHeight="40" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4" />

    <Label text="PESEL" GridPane.halignment="LEFT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5"></Label>
    <TextField fx:id="peselField" prefHeight="40" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" />

    <Label text="Adres" GridPane.halignment="LEFT" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="7"></Label>
    <TextField fx:id="adresField" prefHeight="40" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8" />

    <Button fx:id="registerButton" text="Załóż konto" maxWidth="Infinity" prefHeight="40" defaultButton="true" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" GridPane.rowSpan="1" onAction="#handleRegisterButton">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="10" left="0"></Insets>
        </GridPane.margin>
    </Button>
    <Button fx:id="cancelButton" text="Anuluj" maxWidth="Infinity" prefHeight="40" defaultButton="true" GridPane.columnIndex="0" GridPane.rowIndex="10" GridPane.columnSpan="2" GridPane.rowSpan="1" onAction="#handleCancelButton">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>